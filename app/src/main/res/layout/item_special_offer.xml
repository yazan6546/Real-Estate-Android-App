<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Property Image with Discount Badge -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <ImageView
                android:id="@+id/ivPropertyImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@android:color/darker_gray"
                android:src="@drawable/ic_building" />

            <!-- Discount Badge - Always visible for special offers -->
            <TextView
                android:id="@+id/tvDiscountBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:layout_margin="12dp"
                android:background="@drawable/circle_background"
                android:backgroundTint="@color/green_700"
                android:padding="8dp"
                android:text="0% OFF"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:visibility="visible" />

            <!-- Featured Property Star -->
            <ImageView
                android:id="@+id/ivFeaturedStar"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="top|start"
                android:layout_margin="12dp"
                android:src="@drawable/ic_star"
                android:visibility="gone"
                app:tint="@color/yellow_500" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Property Header with Type, Price and Discount Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvPropertyType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingVertical="4dp"
                        android:text="Apartment"
                        android:textAlignment="viewStart"
                        android:textColor="@color/blue_700"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <!-- Discount Text -->
                    <TextView
                        android:id="@+id/tvDiscountText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Create Special Offer!"
                        android:textColor="@color/green_700"
                        android:textSize="10sp"
                        android:textStyle="italic"
                        android:visibility="visible" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="end">

                    <!-- Original Price (crossed out) -->
                    <TextView
                        android:id="@+id/tvOriginalPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$1,500/month"
                        android:textAlignment="textEnd"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="12sp"
                        android:visibility="visible"
                        android:paintFlags="strike_through_text" />

                    <!-- New Discounted Price -->
                    <TextView
                        android:id="@+id/tvPropertyPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$1,500/month"
                        android:textAlignment="textEnd"
                        android:textColor="@color/green_700"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            <!-- Property Title -->
            <TextView
                android:id="@+id/tvPropertyTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Modern Apartment in Downtown"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp" />

            <!-- Property Description -->
            <TextView
                android:id="@+id/tvPropertyDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Beautiful 2-bedroom apartment with modern amenities, fully furnished, and great city views."
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginBottom="12dp"
                android:maxLines="3"
                android:ellipsize="end" />

            <!-- Location -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_building"
                    android:layout_marginEnd="8dp"
                    app:tint="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/tvPropertyLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Downtown, City Center"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray" />

            </LinearLayout>

            <!-- Property Details (Bedrooms, Bathrooms, Area) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/tvBedrooms"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="2 Beds"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray"
                    android:drawableStart="@drawable/ic_bed"
                    android:drawablePadding="4dp"
                    android:gravity="center_vertical" />

                <TextView
                    android:id="@+id/tvBathrooms"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="2 Baths"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray"
                    android:drawableStart="@drawable/ic_bath"
                    android:drawablePadding="4dp"
                    android:gravity="center_vertical" />

                <TextView
                    android:id="@+id/tvArea"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="120 sqm"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray"
                    android:drawableStart="@drawable/ic_area"
                    android:drawablePadding="4dp"
                    android:gravity="center_vertical" />

            </LinearLayout>

            <!-- Discount Slider Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp"
                android:padding="12dp"
                android:background="@drawable/rounded_background"
                android:backgroundTint="@color/blue_50">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Set Discount Amount"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/blue_700"
                    android:layout_marginBottom="8dp"
                    android:gravity="center" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0%"
                        android:textSize="12sp"
                        android:textColor="@android:color/darker_gray" />

                    <SeekBar
                        android:id="@+id/seekBarDiscount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="16dp"
                        android:max="100"
                        android:progress="0"
                        android:progressTint="@color/green_700"
                        android:thumbTint="@color/green_700" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100%"
                        android:textSize="12sp"
                        android:textColor="@android:color/darker_gray" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tvDiscountAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Discount: 0% ($0 off)"
                    android:textSize="14sp"
                    android:textColor="@color/green_700"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

            <!-- Create Offer Button -->
            <Button
                android:id="@+id/btnCreateOffer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_primary"
                android:padding="16dp"
                android:text="Create Offer"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:drawableStart="@drawable/ic_offer"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:drawableTint="@android:color/white" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>